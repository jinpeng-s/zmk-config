// use require-prior-idle-ms for combos
#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <200>;

#undef COMBO_TERM
#define COMBO_TERM 30

ZMK_COMBO(esc   , &kp ESC            , LH2 RH2 , PRI , COMBO_TERM)

//////////////////////////////
// Vertical combos
//////////////////////////////

// Vertical combos - left hand

ZMK_COMBO(at    , &kp AT             , LT4 LM4 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , LM4 LB4 , PRI , COMBO_TERM)

ZMK_COMBO(minus , &kp MINUS          , LT3 LM3 , PRI , COMBO_TERM)
ZMK_COMBO(plus  , &kp PLUS           , LM3 LB3 , PRI , COMBO_TERM)

ZMK_COMBO(fslh  , &kp FSLH           , LT2 LM2 , PRI , COMBO_TERM)
ZMK_COMBO(star  , &kp STAR           , LM2 LB2 , PRI , COMBO_TERM)

ZMK_COMBO(under , &kp UNDER          , LT1 LM1 , PRI , COMBO_TERM)
ZMK_COMBO(equal , &kp EQUAL          , LM1 LB1 , PRI , COMBO_TERM)

// ZMK_COMBO(___   , &kp 0              , LT0 LM0 , PRI , COMBO_TERM)
ZMK_COMBO(t     , &kp T              , LM0 LB0 , PRI , COMBO_TERM)

// Vertical combos - right hand

// ZMK_COMBO(___   , &kp 0              , RT0 RM0 , PRI , COMBO_TERM)
ZMK_COMBO(y     , &kp Y              , RM0 RB0 , PRI , COMBO_TERM)

ZMK_COMBO(hash  , &kp HASH           , RT1 RM1 , PRI , COMBO_TERM)
ZMK_COMBO(prcnt , &kp PRCNT          , RM1 RB1 , PRI , COMBO_TERM)

ZMK_COMBO(caret , &kp CARET          , RT2 RM2 , PRI , COMBO_TERM)
ZMK_COMBO(dllr  , &kp DLLR           , RM2 RB2 , PRI , COMBO_TERM)

ZMK_COMBO(pipe  , &kp PIPE           , RT3 RM3 , PRI , COMBO_TERM)
ZMK_COMBO(amps  , &kp AMPS           , RM3 RB3 , PRI , COMBO_TERM)

ZMK_COMBO(bslh  , &kp BSLH           , RT4 RM4 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , RM4 RB4 , PRI , COMBO_TERM)

//////////////////////////////
// Horizontal combos
//////////////////////////////

// Horizontal combos - left hand

ZMK_BEHAVIOR(_smart_aps, macro,
    bindings = <&kp APOS &kp APOS &kp LEFT>;
)
ZMK_BEHAVIOR(smart_aps, tap_dance,
    bindings = <&kp APOS>, <&_smart_aps>;
)

ZMK_BEHAVIOR(_smart_thn, macro,
    bindings = <&kp LT &kp GT &kp LEFT>;
)
ZMK_BEHAVIOR(smart_thn, tap_dance,
    bindings = <&kp LT>, <&_smart_thn>;
)

ZMK_BEHAVIOR(_smart_par, macro,
    bindings = <&kp LPAR &kp RPAR &kp LEFT>;
)
ZMK_BEHAVIOR(smart_par, tap_dance,
    bindings = <&kp LPAR>, <&_smart_par>;
)

// ZMK_COMBO(___   , &kp 0              , LT4 LT3 , PRI , COMBO_TERM)
ZMK_COMBO(lt    , &smart_thn         , LT3 LT2 , PRI , COMBO_TERM)
ZMK_COMBO(rt    , &kp LS(DOT)        , LT2 LT1 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , LT1 LT0 , PRI , COMBO_TERM)

// ZMK_COMBO(___   , &kp 0              , LM4 LM3 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , LM3 LM2 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , LM2 LM1 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , LM1 LM0 , PRI , COMBO_TERM)

// ZMK_COMBO(___   , &kp 0              , LB4 LB3 , PRI , COMBO_TERM)
ZMK_COMBO(lpar  , &smart_par         , LB3 LB2 , PRI , COMBO_TERM)
ZMK_COMBO(rpar  , &kp RPAR           , LB2 LB1 , PRI , COMBO_TERM)
// ZMK_COMBO(___   , &kp 0              , LB1 LB0 , PRI , COMBO_TERM)

// Horizontal combos - right hand

ZMK_BEHAVIOR(_smart_bkt, macro,
    bindings = <&kp LBKT &kp RBKT &kp LEFT>;
)
ZMK_BEHAVIOR(smart_bkt, tap_dance,
    bindings = <&kp LBKT>, <&_smart_bkt>;
)

ZMK_BEHAVIOR(_smart_brc, macro,
    bindings = <&kp LBRC &kp RBRC &kp LEFT>;
)
ZMK_BEHAVIOR(smart_brc, tap_dance,
