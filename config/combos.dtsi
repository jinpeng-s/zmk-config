ZMK_COMBO(at    , &kp AT        , RT4 RM4 , DEF SYM , COMBO_TERM)
ZMK_COMBO(hash  , &kp HASH      , RM4 RB4 , DEF SYM , COMBO_TERM)

/* Horizontal combos - left hand */
ZMK_COMBO(bspc  , &kp BSPC      , LT4 LT3 , DEF SYM , COMBO_TERM)
ZMK_COMBO(ret   , &kp RET       , LM4 LM3 , DEF SYM , COMBO_TERM)
