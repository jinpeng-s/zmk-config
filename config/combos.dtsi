ZMK_COMBO(rpar  , &kp RPAR      , LB2 LB1 , DEF SYM , COMBO_TERM)

/* Horizontal combos - right hand */
ZMK_COMBO(lbrc  , &kp LBRC      , RM1 LM2 , DEF SYM , COMBO_TERM)
ZMK_COMBO(lbkt  , &kp LBKT      , RB1 LB2 , DEF SYM , COMBO_TERM)

ZMK_COMBO(rbrc  , &kp RBRC      , RM2 LM3 , DEF SYM , COMBO_TERM)
