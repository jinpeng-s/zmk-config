// use require-prior-idle-ms for combos
#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <175>;

#undef COMBO_TERM
#define COMBO_TERM 30

/* Vertical combos - left hand */
ZMK_COMBO(pipe  , &kp PIPE      , LT4 LM4 , DEF SYM , COMBO_TERM)
ZMK_COMBO(amps  , &kp AMPS      , LM4 LB4 , DEF SYM , COMBO_TERM)

ZMK_COMBO(plus  , &kp PLUS      , LT3 LM3 , DEF SYM , COMBO_TERM)
ZMK_COMBO(minus , &kp MINUS     , LM3 LB3 , DEF SYM , COMBO_TERM)

ZMK_COMBO(star  , &kp STAR      , LT2 LM2 , DEF SYM , COMBO_TERM)
ZMK_COMBO(fslh  , &kp FSLH      , LM2 LB2 , DEF SYM , COMBO_TERM)

ZMK_COMBO(under , &kp UNDER     , LT1 LM1 , DEF SYM , COMBO_TERM)
ZMK_COMBO(equal , &kp EQUAL     , LM1 LB1 , DEF SYM , COMBO_TERM)

ZMK_COMBO(prcnt , &kp PRCNT     , LT0 LM0 , DEF SYM , COMBO_TERM)
ZMK_COMBO(caret , &kp CARET     , LM0 LB0 , DEF SYM , COMBO_TERM)

/* Vertical combos - right hand */
ZMK_COMBO(tilde , &kp TILDE     , RT0 RM0 , DEF SYM , COMBO_TERM)
